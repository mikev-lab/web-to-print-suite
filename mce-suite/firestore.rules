rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products are public read, but admin-only write.
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if false; // TODO: Add admin-only logic later
    }

    // Pricing matrix is public read, but admin-only write.
    match /pricing_matrix/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // TODO: Add admin-only logic later
    }

    // Orders can be created by users, but they can only read/update their own.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
  }
}
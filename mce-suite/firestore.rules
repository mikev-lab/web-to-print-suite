rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to config and pricing
    match /config/{docId} {
      allow get: if true;
      allow list, write: if false;
    }
    match /pricing_matrix/{docId} {
      allow get: if true;
      allow list: if true; // Allow client to query the collection
      allow write: if false;
    }

    // Allow users to create and manage their own orders
    match /orders/{orderId} {
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }

    // Default: Deny all other operations
    match /{document=**} {
      allow read, write: if false;
    }
  }
}